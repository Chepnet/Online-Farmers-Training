@{

    ViewData["Title"] = "Applications List";

}
<h2>Applicants</h2>
<div>

    <p>
        @Html.ActionLink("Search", "Search", "Home")
    </p>

    <table class="table">
        <tr>
            <th>
                Event Name
            </th>
            <th>
               First Name
            </th>
            <th>
               Last Name
            </th>
            <th>
                Email
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @item.EventName
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.email
                </td>
                <td>
                    @Html.ActionLink(" View Details", "ApplicationDetails", "Application", new { id = item.ApplicationId })


                </td>
            </tr>  
        }

    </table>
</div>