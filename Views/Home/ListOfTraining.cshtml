@{

    ViewData["Title"] = "Training List";

}
<h2>List of Training</h2>
<div>

    <p>
        @Html.ActionLink("Search", "Index1", "FarmersTrainings")
    </p>

    <table class="table">
        <tr>
            <th>
                Trainer Name
            </th>
            <th>
                Event Name
            </th>
            <th>
                Description
            </th>
            <th>
                Training Time
            </th>
            <th>
                Cost of Training
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TrainerName
                </td>
                <td>
                    @item.EventName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.TrainingTime
                </td>
                <td>
                    @item.Cost
                </td>
                <td>
                    @Html.ActionLink(" View Details", "Details", new { id = item.TrainingId })


                </td>
            </tr>
        }

    </table>
</div>